<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff">


    <RelativeLayout
        android:id="@+id/middle_layout"
        android:layout_width="fill_parent"
        android:layout_height="200dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="82dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="1px"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:background="#DEDEDE" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="1px"
                android:layout_weight="1"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="#DEDEDE" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="1px"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                android:background="#DEDEDE" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/picker_layout"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="2px"
            android:layout_marginBottom="2px"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="3">

            <com.meili.moon.sdk.app.widget.wheelview.WheelView
                android:id="@+id/year"
                android:layout_width="90dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="#ff0000" />

            <com.meili.moon.sdk.app.widget.wheelview.WheelView
                android:id="@+id/month"
                android:layout_width="90dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="#00ff00" />

            <com.meili.moon.sdk.app.widget.wheelview.WheelView
                android:id="@+id/day"
                android:layout_width="90dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="#0000ff" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="123dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="1px"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:background="#DEDEDE" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="1px"
                android:layout_weight="1"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="#DEDEDE" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="1px"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                android:background="#DEDEDE" />

        </LinearLayout>


    </RelativeLayout>



    <View
        android:id="@+id/mDatePickerLine"
        android:background="#e6e6e6"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/middle_layout"
        />

    <TextView
        android:id="@+id/mDatePickerForeverText"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="14dp"
        android:layout_below="@+id/mDatePickerLine"
        android:text="长期有效"
        android:gravity="center"
        android:textColor="#999999"
        android:textSize="14dp" />

    <View
        android:layout_width="1dp"
        android:layout_below="@+id/mDatePickerForeverText"
        android:layout_height="10dp"/>

</RelativeLayout>