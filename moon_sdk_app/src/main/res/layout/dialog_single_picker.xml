<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="377dp"
    android:background="@android:color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:background="#faf9f9">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#dedede" />

        <TextView
            android:id="@+id/singlePickerCancel"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="取消"
            android:textColor="#29292d"
            android:textSize="16dp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/singlePickerTitle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/singlePickerConfirm"
            android:layout_toRightOf="@+id/singlePickerCancel"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:text=""
            android:textColor="#6e6e6e"
            android:textSize="15dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/singlePickerConfirm"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="确定"
            android:textColor="@color/theme_color"
            android:textSize="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:background="#dedede" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="336dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_centerVertical="true"
            android:layout_height="289dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="123dp"
                android:background="#DEDEDE" />

            <com.meili.moon.sdk.app.widget.wheelview.WheelView
                android:id="@+id/wheelViewSingle"
                android:layout_width="match_parent"
                android:layout_height="289dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="166.5dp"
                android:background="#DEDEDE" />

        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>
