<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/moon_sdk_app_title_bar_height">

    <TextView
        android:id="@+id/tv_title_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:textColor="@color/moon_sdk_app_titlebar_menu_text_color"
        android:textSize="16dp"
        tools:text="ZHONGGUO"/>

    <ImageView
        android:id="@+id/iv_icon_tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/tv_title_bar"
        android:layout_alignTop="@id/tv_title_bar"
        android:layout_marginTop="-7dp"
        android:src="@drawable/moon_sdk_app_title_bar_redpoint"
        android:visibility="gone"
        tools:visibility="visible"/>

</RelativeLayout>