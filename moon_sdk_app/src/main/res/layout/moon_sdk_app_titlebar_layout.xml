<?xml version="1.0" encoding="utf-8"?>
<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    >
    <!--<RelativeLayout-->
    <!--xmlns:android="http://schemas.android.com/apk/res/android"-->
    <!--xmlns:tools="http://schemas.android.com/tools"-->
    <!--android:id="@+id/title_bar_container"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="@dimen/moon_sdk_app_title_bar_height"-->
    <!--android:background="@drawable/moon_sdk_app_titlebar_bg"-->
    <!--android:orientation="horizontal">-->
    <RelativeLayout
        android:id="@+id/layout_home"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:clickable="true"
        android:focusable="true"
        android:minWidth="@dimen/moon_sdk_app_title_bar_button"
        android:paddingLeft="14dp">

        <ImageView
            android:id="@+id/title_bar_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="1dp"
            android:clickable="false"
            android:focusable="false"
            android:scaleType="matrix"
            tools:src="@drawable/moon_sdk_app_title_bar_home_back"/>

        <TextView
            android:id="@+id/title_bar_home_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/title_bar_home"
            android:focusable="false"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:textColor="@color/moon_sdk_app_titlebar_menu_text_color"
            android:textSize="14dp"/>

        <ImageView
            android:id="@+id/h5_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="29dp"
            android:layout_toRightOf="@id/title_bar_home_text"
            android:gravity="center_vertical"
            android:src="@drawable/h5_close"
            android:visibility="gone"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/title_bar_menu_bar"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_marginRight="9dp"
        android:duplicateParentState="false"
        android:gravity="center_vertical"
        android:orientation="horizontal"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="75dp"
        android:layout_marginRight="75dp"
        android:gravity="center">

        <TextView
            android:id="@+id/title_bar_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:ellipsize="middle"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="@color/moon_sdk_app_title_bar_menu_text_normal"
            android:textSize="@dimen/moon_sdk_app_title_bar_title_text"
            tools:text="我是title"/>
    </RelativeLayout>

    <!--</RelativeLayout>-->
</merge>
