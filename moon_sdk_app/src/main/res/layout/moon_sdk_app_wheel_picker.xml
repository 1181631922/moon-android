<?xml version="1.0" encoding="utf-8"?>
<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/mViewTopLabel"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#F4F4F4"/>

    <TextView
        android:id="@+id/mTxtCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:paddingBottom="9dp"
        android:paddingLeft="15dp"
        android:paddingRight="30dp"
        android:paddingTop="9dp"
        android:text="取消"
        android:textColor="#29292D"
        android:textSize="16dp"/>

    <TextView
        android:id="@+id/mTxtSubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:paddingBottom="9dp"
        android:paddingLeft="30dp"
        android:paddingRight="15dp"
        android:paddingTop="9dp"
        android:text="确定"
        android:textColor="#0036a7"
        android:textSize="16dp"/>

    <com.meili.moon.sdk.app.widget.picker.NumberPicker
        android:id="@+id/mNumberPicker"
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:layout_below="@+id/mViewTopLabel"
        android:padding="16dp"
        app:backgroundColor="#FFFFFF"
        />

</merge>