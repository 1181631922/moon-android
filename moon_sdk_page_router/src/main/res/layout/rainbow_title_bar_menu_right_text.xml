<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/rainbow_title_bar_height">

    <TextView
        android:id="@+id/mTxtTitleMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:textColor="@color/rainbow_titlebar_menu_text_color"
        android:textSize="16dp"
        tools:text="ZHONGGUO"/>

    <ImageView
        android:id="@+id/mImgTitleRedPoint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/mTxtTitleMenu"
        android:layout_alignTop="@id/mTxtTitleMenu"
        android:layout_marginTop="-7dp"
        android:src="@drawable/rainbow_titlebar_red_point"
        android:visibility="gone"
        tools:visibility="visible"/>

</RelativeLayout>